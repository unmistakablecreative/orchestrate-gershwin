  "json_manager": {
    "message": "JSON Manager unlocked!",
    "requires_credentials": false,
    "guided_activation": {
      "step_1": {
        "narration": "This tool manages your local data files. Let's create a quick list. What do you want to track?",
        "prompt": "List name (e.g., 'goals', 'ideas', 'contacts'):",
        "requires_user_input": true,
        "next": "step_2"
      },
      "step_2": {
        "narration": "Creating {{user_input}}.json...",
        "action_template": {
          "tool": "json_manager",
          "action": "create_json_file",
          "params": {
            "filename": "{{user_input}}.json"
          }
        },
        "next": "step_3"
      },
      "step_3": {
        "narration": "What's the first item to add to your {{step_1_input}} list?",
        "prompt": "First item:",
        "requires_user_input": true,
        "next": "step_4"
      },
      "step_4": {
        "narration": "Adding...",
        "action_template": {
          "tool": "json_manager",
          "action": "add_json_entry",
          "params": {
            "filename": "{{step_1_input}}.json",
            "entry_key": "item_1",
            "entry_data": {
              "content": "{{user_input}}",
              "created": "{{timestamp}}"
            }
          }
        },
        "narration_after": "Done! Your {{step_1_input}} list is ready with '{{user_input}}' as the first entry.\n\nYou can now say:\n- 'Add to my {{step_1_input}}: [item]'\n- 'Show my {{step_1_input}} list'\n- 'Create a new list called [name]'",
        "next": null
      }
    }
  },

